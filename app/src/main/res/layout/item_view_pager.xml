<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="24dp"
    android:layout_marginVertical="12dp"
    android:layout_marginEnd="55dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/checkBoxContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="81dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/terms_conditions_checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="6dp"
            android:button="@drawable/selector_check_box_bidding"
            android:checked="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textColor="#222222"
            android:fontFamily="@font/inter_600"
            android:textSize="14sp"
            android:text="Action Title" />

        </LinearLayout>

        <com.ibrahim.adam_task.view.custom.CustomTextView
            android:id="@+id/customTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:drawableMargin="12dp"
            app:layout_constraintTop_toBottomOf="@id/checkBoxContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            app:textDimension="14dp"
            app:textDrawable="@drawable/ic_bage"
            app:textString="Project name" />

        <com.ibrahim.adam_task.view.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:drawableMargin="12dp"
            app:layout_constraintTop_toBottomOf="@id/customTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="14dp"
            app:textDimension="14dp"
            app:textDrawable="@drawable/ic_calender"
            app:textString="Apr 13, 2020 " />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_red"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="High"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>